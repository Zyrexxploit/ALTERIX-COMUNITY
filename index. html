<script>
/* AUTO AMBIL MEMBER DISCORD (WIDGET PUBLIC) */
fetch("https://discord.com/api/guilds/613425648685547541/widget.json")
  .then(r => r.json())
  .then(d => {
    document.getElementById("memberCount").innerText =
      d.presence_count + " Member Online";
  })
  .catch(() => {
    document.getElementById("memberCount").innerText =
      "Discord Offline";
  });
